{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build (Debug, x86)",
			"type": "shell",
			"command": "premake5 gmake2; make config=debug_win32 DIVA",
			"windows": {
				"options": {
					"env": {
						"PATH": "${env.PATH};C:\\msys2\\mingw32\\bin"
					}
				}
			},
			"problemMatcher": [ "$gcc" ],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build Tools (Debug, x86)",
			"type": "shell",
			"command": "premake5 gmake2; make config=debug_win32 SpritePack",
			"windows": {
				"options": {
					"env": {
						"PATH": "${env.PATH};C:\\msys2\\mingw32\\bin"
					}
				}
			},
			"problemMatcher": [ "$gcc" ],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build (Release, x86)",
			"type": "shell",
			"command": "premake5 gmake2; make config=release_win32 DIVA",
			"windows": {
				"options": {
					"env": {
						"PATH": "${env.PATH};C:\\msys2\\mingw32\\bin"
					}
				}
			},
			"problemMatcher": [ "$gcc" ],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "Clear",
			"type": "shell",
			"command": "make clean",
			"windows": {
				"options": {
					"env": {
						"PATH": "${env.PATH};C:\\msys2\\mingw32\\bin"
					}
				}
			}
		}
	]
}